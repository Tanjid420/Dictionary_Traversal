  <style>
    * {
      box-sizing: border-box;
      padding: 0;
      margin: 0;
      font-family: sans-serif;
    }
    .grid-container {
      display: grid;
      grid-template-columns: auto auto;
      grid-template-rows: 10rem 4rem 4rem;
      /* grid-row-gap: 1.5rem; */
      grid-row-gap: 4rem;
      grid-column-gap: 1.5rem;
      
      margin-top: 8rem;
      padding-left: 4rem;
      padding-right: 4rem;
      padding-bottom: 10rem;
    }
    .grid-container > div {
      background: -webkit-linear-gradient(
        left,
        #a839a88a,
        rgba(190, 60, 202, 0.425)
      );
      border: 3px solid black;
      text-align: center;
      color: cornsilk;
      /* Changed */
    }
    .box1 {
      grid-column: 1/3;
      font-size: 2.5rem;
      padding-top: 0.5rem;
    }
    .box2,
    .box3,
    .box4,
    .box5 {
      /* overflow:scroll; */
      font-size: 2rem;
      box-sizing: border-box;
      /* height: max-content; */
      height: 7rem;
      /* width: 100%; */
      padding: auto;

      /* white-space: nowrap;*/
      /* overflow: hidden; */
      /* text-overflow: ellipsis; */ 
    }

    #hover:hover {
      box-shadow: 0 4px 4px 4px black;
    }
